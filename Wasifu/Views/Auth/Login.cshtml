@model Wasifu.Dtos.LoginDto;


<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-4">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-3">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Please sign in</h3>

                        @if (!string.IsNullOrEmpty(Model.loginError))
                        {
                            <div class="alert alert-danger p-1 alert-dismissible" role="alert">
                                @Model.loginError
                            </div>
                        }

                        <form asp-action="Login" asp-route-returnurl="@ViewData["returnUrl"]">
                            <div class="row">
                                <div class="col-12 mb-2 pb-2">
                                    <div class="form-outline">
                                        @Html.TextBoxFor(m=>m.Email, new {@class="form-control form-control-lg", @type="email", @placeholder ="Email"})

                                    </div>
                                </div>
                                <div class="col-12 mb-2">
                                    <div class="form-outline">
                                        @Html.TextBoxFor(m=>m.Password, new {@class="form-control form-control-lg",placeholder="Password", @type="password"})
                                    </div>

                                </div>
                            </div>
                            <div class="mt-2 pt-2">
                                <input class="btn btn-primary  float-end" type="submit" value="Login" />
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <a asp-area="" asp-controller="Auth" asp-action="Register">Register</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Styles{
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

}
