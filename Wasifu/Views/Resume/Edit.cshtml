                                                            <input type="text" class="form-control" id="inputEmail4">
                                                        </div>
                                                    </div>

                                                    <div class="mb-3">
                                                        <label for="exampleFormControlTextarea1" class="form-label">Professional Description</label>
                                                        <textarea class="form-control" id="ProfessionalDescription" rows="6"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-sm btn-outline-info" id="AddEmploymentHistory"> <i class="fa-solid fa-plus"></i> Add Employment Histroy</button>
                                </div>
                            </div>
                        </div>

                    </div>




                </div>
                <div class="col-12 mb-3">
                </div>
            </div>
        </div>
        <div class="col-6">
        </div>
    </div>
</div>

